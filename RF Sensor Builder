blueprint:
  name: RF Code to Contact Sensor Toggle (Fixed Sensor)
  description: |
    Listens for RF codes on sensor.rf_last_code.
    If the code matches one of the two configured codes, toggles an input_boolean (virtual contact sensor).
  domain: automation
  input:
    code_1:
      name: RF Code 1
      description: First RF code to listen for.
      selector:
        text:
    code_2:
      name: RF Code 2
      description: (Optional) Second RF code to listen for.
      default: ''
      selector:
        text:
    target_device:
      name: Target Device (Input Boolean)
      description: The input_boolean to toggle.
      selector:
        entity:
          domain: input_boolean

trigger:
  - platform: state
    entity_id: sensor.rf_last_code

condition:
  - condition: template
    value_template: >-
      {{ trigger.to_state.state == !input code_1 or ( !input code_2 != '' and trigger.to_state.state == !input code_2 ) }}

action:
  - service: input_boolean.toggle
    target:
      entity_id: !input target_device

mode: restart
