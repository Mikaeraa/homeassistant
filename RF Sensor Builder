blueprint:
  name: RF Code to Contact Sensor Toggle
  description: |
    Listens for RF codes on a sensor (e.g., sensor.rf_last_code).
    If the code matches one of the two configured codes, toggles an input_boolean (virtual contact sensor).
  domain: automation
  input:
    rf_sensor:
      name: RF Sensor
      description: The sensor that receives RF codes (e.g., sensor.rf_last_code).
      selector:
        entity:
          domain: sensor
    code_1:
      name: RF Code 1
      description: First RF code to listen for.
      selector:
        text:
    code_2:
      name: RF Code 2
      description: (Optional) Second RF code to listen for.
      default: ''
      selector:
        text:
    target_device:
      name: Target Device (Input Boolean)
      description: The input_boolean to toggle.
      selector:
        entity:
          domain: input_boolean

trigger:
  - platform: state
    entity_id: !input rf_sensor

condition:
  - condition: template
    value_template: >-
      {% set code1 = (states('' + ('' + !input code_1))) %}
      {% set code2 = (states('' + ('' + !input code_2))) %}
      {{ trigger.to_state.state == code1 or trigger.to_state.state == code2 }}

action:
  - service: input_boolean.toggle
    target:
      entity_id: !input target_device

mode: restart
